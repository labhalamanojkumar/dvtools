  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://dvtools.com/manifest.json"
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+dvtools",
      "url": "/tools/%s"
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "handle_links": "preferred",
  
  "file_handlers": [
    {
      "action": "/tools/json-formatter",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ],
  
  "share_target": {
    "action": "/tools/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "device_categories": {
    "mobile": {
      "recommended_browsers": ["chrome", "samsung", "firefox"],
      "install_instructions": "/install/android",
      "features": ["offline", "push", "shortcuts"]
    },
    "desktop": {
      "recommended_browsers": ["chrome", "edge", "safari"],
      "install_instructions": "/install/desktop",
      "features": ["window-controls", "shortcuts", "file-handlers"]
    },
    "tablet": {
      "recommended_browsers": ["chrome", "safari"],
      "install_instructions": "/install/ios",
      "features": ["offline", "landscape", "shortcuts"]
    }
  }
}
