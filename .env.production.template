# DvTools Production Environment Configuration for Coolify
# Copy these variables to Coolify's environment variable settings

# ==========================================
# DATABASE CONFIGURATION (REQUIRED)
# ==========================================
# Use Coolify's MySQL/PostgreSQL service or external database
DATABASE_URL="mysql://username:password@mysql:3306/dvtools"
DATABASE_PROVIDER="mysql"

# Optional: Redis for caching
REDIS_URL="redis://redis:6379"

# ==========================================
# NEXTAUTH CONFIGURATION (REQUIRED)
# ==========================================
# Generate NEXTAUTH_SECRET: openssl rand -base64 32
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="GENERATE_A_SECURE_SECRET_HERE"

# ==========================================
# APPLICATION URLS (REQUIRED)
# ==========================================
APP_URL="https://your-domain.com"
SITE_URL="https://your-domain.com"
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# ==========================================
# ADMIN ACCOUNT (REQUIRED)
# ==========================================
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="ChangeThisSecurePassword123!"

# ==========================================
# APPLICATION SETTINGS
# ==========================================
NODE_ENV="production"
PORT=3000
HOSTNAME="0.0.0.0"
SITE_NAME="DvTools"
SITE_DESCRIPTION="Professional developer tools for JSON formatting, Base64 encoding, JWT decoding, and more."

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_ANALYTICS="true"
RUN_MIGRATIONS="true"

# ==========================================
# PERFORMANCE & SECURITY
# ==========================================
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"
LOG_LEVEL="info"

# ==========================================
# PAYMENT GATEWAYS (OPTIONAL)
# ==========================================
# Stripe
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# PayPal
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
PAYPAL_SANDBOX_MODE="false"

# DodoPay
DODOPAY_MERCHANT_ID=""
DODOPAY_API_KEY=""
DODOPAY_TEST_MODE="false"

# Razorpay
RAZORPAY_KEY_ID=""
RAZORPAY_KEY_SECRET=""

# ==========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ==========================================
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@yourdomain.com"

# ==========================================
# OAUTH PROVIDERS (OPTIONAL)
# ==========================================
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ==========================================
# MONITORING & ANALYTICS (OPTIONAL)
# ==========================================
SENTRY_DSN=""
GOOGLE_ANALYTICS_ID=""
GOOGLE_TAG_MANAGER_ID=""

# ==========================================
# CDN & STORAGE (OPTIONAL)
# ==========================================
CDN_URL=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""
AWS_S3_BUCKET=""

# ==========================================
# SECURITY
# ==========================================
# Disable Next.js telemetry in production
NEXT_TELEMETRY_DISABLED="1"

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS="https://your-domain.com,https://www.your-domain.com"
