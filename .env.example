# DVtools Environment Configuration
# Copy this file to .env.local for development or configure in Coolify for production

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# For development (SQLite)
# DATABASE_URL="file:./prisma/dev.db"
# DATABASE_PROVIDER="sqlite"

# For production (MySQL/PostgreSQL) - Use Coolify database URL
DATABASE_URL="mysql://username:password@host:port/database"
DATABASE_PROVIDER="mysql"

# Redis URL (optional, for caching)
REDIS_URL="redis://localhost:6379"

# ==========================================
# NEXTAUTH CONFIGURATION (REQUIRED)
# ==========================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
NODE_ENV="development"
APP_URL="http://localhost:3000"
PORT=3000
HOSTNAME="0.0.0.0"

# ==========================================
# ADMIN ACCOUNT CONFIGURATION
# ==========================================
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="secure-admin-password"

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_ANALYTICS="false"
RUN_MIGRATIONS="true"

# ==========================================
# PERFORMANCE & SECURITY
# ==========================================
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"
LOG_LEVEL="info"

# ==========================================
# SEO CONFIGURATION
# ==========================================
SITE_NAME="DvTools"
SITE_DESCRIPTION="Professional developer tools for JSON formatting, Base64 encoding, JWT decoding, and more."
SITE_URL="http://localhost:3000"

# ==========================================
# PAYMENT GATEWAYS (OPTIONAL)
# ==========================================
# Stripe
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# PayPal
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
PAYPAL_SANDBOX_MODE="true"

# DodoPay
DODOPAY_MERCHANT_ID=""
DODOPAY_API_KEY=""
DODOPAY_TEST_MODE="true"

# Razorpay
RAZORPAY_KEY_ID=""
RAZORPAY_KEY_SECRET=""

# ==========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ==========================================
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""

# ==========================================
# OAUTH CONFIGURATION (OPTIONAL)
# ==========================================
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
RUN_MIGRATIONS="true"

# Logging
LOG_LEVEL="debug"
